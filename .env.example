# Docker Environment Variables Template
# Copy this to .env and fill in your actual values

# Database
DB_NAME=ai_portfolio_dev
DB_USER=ai_portfolio_user
DB_PASSWORD=your_secure_password_here

# Django
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend API URL (used by browser - must be publicly accessible)
# Local development: http://localhost:8000
# Production: https://your-domain.com (or https://wwwportfolio.henrihaapala.com for production)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# API Keys (GET FROM: https://dashboard.cohere.com/api-keys and https://console.groq.com/)
COHERE_API_KEY=your_cohere_api_key_here
COHERE_EMBED_MODEL=embed-english-v3.0

GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# MCP Server Authentication (for external access)
# Generate a secure random key: openssl rand -hex 32
MCP_API_KEY=your_mcp_api_key_here
# Or use multiple keys (comma-separated):
# MCP_API_KEYS=key1,key2,key3